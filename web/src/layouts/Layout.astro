---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      :root {
        --orange: #f97316;
        --orange-dark: #ea580c;
        --green: #22c55e;
        --bg: #fafaf9;
        --text: #1c1917;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: system-ui, -apple-system, sans-serif;
        background: var(--bg);
        color: var(--text);
        min-height: 100vh;
        padding: 2rem;
      }

      main {
        max-width: 600px;
        margin: 0 auto;
      }

      h1 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
